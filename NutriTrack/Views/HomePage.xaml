<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriTrack.Views.HomePage"
             Title="Home Page">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <Label Text="NutriTrack"
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Welcome! Stay on top of your nutrition goals."
                   FontSize="18"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Button Text="View Journey"
                    FontSize="18"
                    Clicked="OnJourneyClicked"
                    BackgroundColor="DarkGreen"/>

            <Button Text="Search Food"
                    FontSize="18"
                    Clicked="OnSearchClicked"
                    BackgroundColor="DarkGreen"/>

            <Button Text="Food Info"
                    FontSize="18"
                    Clicked="OnFoodInfoClicked" 
                    BackgroundColor="DarkGreen"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>