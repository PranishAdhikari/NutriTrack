<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriTrack.Views.JourneyPage"
             Title="Your Journey">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Your Journey"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label x:Name="CurrentWeightLabel"
                   Text="Current Weight: -- lbs"
                   FontSize="20"
                   HorizontalOptions="Center" />

            <Label x:Name="ProgressLabel"
                   Text="Progress: -- lbs lost"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Update Weight"
                    Clicked="OnUpdateWeightClicked"
                    HorizontalOptions="Center" />
            
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>