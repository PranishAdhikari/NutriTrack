<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NutriTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:NutriTrack.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="Search"
            Icon="search.png"
            ContentTemplate="{DataTemplate views:SearchPage}"
            Route="SearchPage" />

        <ShellContent
            Title="Food Info"
            Icon="info.png"
            ContentTemplate="{DataTemplate views:FoodInfoPage}"
            Route="FoodInfoPage" />
    </TabBar>
</Shell>
